<tr>
  <td><%= source.content %> </td>
  <td>
    <% for tag in source.tags %>
        <%= tag.name + '|' %>
    <% end  %>
  </td>
  <td><%= source.work_id %> </td>
  <td><%= link_to "edit", edit_source_path(source) %></td>
  <td><%= link_to "delete", source, :method => :delete, :confirm => "You sure?", :title => "Delete source" %></td>
</tr>