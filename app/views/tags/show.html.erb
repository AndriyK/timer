<div class="span6">
    <% unless @user.tags.empty? %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Tag</th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <%= render @tags %>

        </table>
    <% end %>

    <%= render 'shared/flash_message' %>

    <%= form_for(@tag, :html => { :class => "well form-inline" }) do |f| %>
        <fieldset>

          <legend>Add new tag</legend>

          <%= render 'fields', :f => f %>

          <%= f.submit "Add tag", :class=>"btn btn-primary" %>

        </fieldset>
    <% end %>
</div>

<div class="span3">
  <h6 style="text-align: center">Tags usage</h6>
  <p> <%= @tags_cloud%> </p>
</div>